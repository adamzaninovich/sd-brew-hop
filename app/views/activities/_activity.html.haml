.panel-heading
  %h4
    = link_to activity.trackable.user_name(current_user), activity.owner
    hopped
    = link_to activity.trackable.brewery.name, activity.trackable.brewery
    %small
      = link_to [activity.trackable.brewery, activity.trackable] do
        = time_ago_in_words activity.trackable.created_at
        ago

- if activity.trackable.image? || activity.trackable.message?
  - if activity.trackable.image?
    = link_to [activity.trackable.brewery, activity.trackable], class:'pull-left' do
      = image_tag activity.trackable.image_url(:thumb), class:'media-object hop-image'
  - if activity.trackable.message?
    = simple_format %Q{"#{activity.trackable.message}"}, class:'lead pull-left hop-message'
  .clearfix
