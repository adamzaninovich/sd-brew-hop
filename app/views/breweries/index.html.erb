<h1>Listing Breweries</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Web Address</th>
      <th>Location</th>
      <th>Year opened</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @breweries.each do |brewery| %>
      <tr>
        <td><%= image_tag brewery.image_url(:tiny) if brewery.image? %>
        <td><%= brewery.name %></td>
        <td><%= link_to format_url(brewery.url), brewery.url, target: '_blank' %></td>
        <td><%= brewery.location %></td>
        <td><%= brewery.year_opened %></td>
        <td><%= link_to 'Show', brewery %></td>
        <td><%= link_to 'Edit', edit_brewery_path(brewery) %></td>
        <td><%= link_to 'Destroy', brewery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

