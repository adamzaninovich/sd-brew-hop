= form_for @brewery, html: { multipart: true, role: 'form', class: 'form-horizontal' } do |f|
  - if @brewery.errors.any?
    #error_explanation
      %h2 #{pluralize(@brewery.errors.count, "error")} prohibited this brewery from being saved:
      %ul
        - @brewery.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-6
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :url, class: 'col-sm-2 control-label'
    .col-sm-6
      = f.url_field :url, class: 'form-control'
  .form-group
    = f.label :remote_image_url, class: 'col-sm-2 control-label'
    .col-sm-6
      = f.text_field :remote_image_url, class: 'form-control'
  .form-group
    = f.label :location, class: 'col-sm-2 control-label'
    .col-sm-6
      = f.text_field :location, class: 'form-control'
  .form-group
    = f.label :year_opened, class: 'col-sm-2 control-label'
    .col-sm-6
      = f.number_field :year_opened, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit nil, class: 'btn btn-default'

