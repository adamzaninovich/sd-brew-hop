- if current_user
  %ul.nav.navbar-nav.navbar-right
    %li.dropdown
      %a.dropdown-toggle{ href:'#', data:{toggle:'dropdown'}}
        = current_user.name
        %b.caret
      %ul.dropdown-menu
        %li= link_to 'My Profile', profile_path
        %li.divider
        %li= link_to 'Sign out', sign_out_path, method: :delete, class: 'navbar-link'
- else
  = button_to 'Sign in with Facebook', 'auth/facebook', class: "btn btn-default navbar-btn navbar-right"

